<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3C3C3C"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/raw_photo_recipe"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/raw_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/raw_title_recipe"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Titre de la recette"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/raw_ingredients_recipe"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Ingredient de la recette"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/raw_rate_recipe"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/raw_hour_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DUREE"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#050505"/>
</RelativeLayout>