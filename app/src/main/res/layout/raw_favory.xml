<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3C3C3C"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/raw_fav_photo_recipe"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/raw_fav_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_cancel"/>

        <LinearLayout
            android:id="@+id/raw_fav_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/raw_fav_title_recipe"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Titre de la recette"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
            <TextView
                android:id="@+id/raw_fav_ingredients_recipe"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Ingredient de la recette"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="italic"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/raw_fav_rate_recipe"
                android:layout_width="290dp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"/>

